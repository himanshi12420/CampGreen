<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    <h1>All campgrounds!</h1>
    <div>
        <a href="/campgrounds/new">Add campground</a>
    </div>
    <% for(let d of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(d.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=d.images[0].url%>">
                        <% }else{ %>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/dvuts8e73/image/upload/v1618817151/YelpCamp/a8blgtpwk5evowljhj7l.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= d.title%>
                        </h5>
                        <p class="card-text">
                            <%= d.description%>
                        </p>
                        <p class="class-text">
                            <small class="text-muted">
                                <%= d.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=d._id %>" class="btn btn-primary">Show details</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                let campgrounds = {
                    features: <%- JSON.stringify(campgrounds) %>
                };
            </script>

            <script src="/javascripts/clusterMap.js"></script>